   def kwargs_to_obj(**kwargs):
   """ Return an object populated from a kwargs dict.
   Useful for mapping html form post request to python object.

   >>> kwargs_to_obj(**{'horse.age':23, 'horse.color': 'bleu',
   'horse.legs[]': 'fl,fr,rl,rr'})
   {'horse': {'color': 'bleu', 'age': 23, 'legs': ['fl', 'fr', 'rl',
   'rr']}}
   """
   result = {}
   for k, v in kwargs.items():
   name_path = k.split('.')
   np = name_path.pop(0)
   temp = result.get(np, {})
   result[np] = temp
   res_temp = {}
   depth = 0
   for np in name_path:
   depth += 1
   if '[]' in np:
   np = np.replace('[]', '')
   temp[np] = temp.get(np, [])
   v = v.split(',')
   else:
   temp[np] = temp.get(np, {})
   res_temp = temp
   temp = temp[np]
   if depth == 0:
   result[np] = v
   else:
   res_temp[np] = v
   return result

