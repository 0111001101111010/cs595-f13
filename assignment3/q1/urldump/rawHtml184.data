}

.acidjs-charts li div,
.acidjs-charts ul li div *
{
    font-size: 12px;
}

.acidjs-charts ul,
.acidjs-charts .acidjs-charts-grid
{
    display: table;
}

.acidjs-charts ul li div em,
.acidjs-charts .acidjs-charts-grid
{
    margin: -20px 0 0;
