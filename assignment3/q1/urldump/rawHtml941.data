$(function() {



	// MOVE COMMENTS ABOVE PR/ITEM NUMBER AND MEDCOM LINK

		$("#commentsShell").insertBefore("#MedComID");
	
		
	// SHOW MAIN COMMENTS AREA (TURNED OFF BY DEFAULT TO ENSURE CLIENT HAS JAVASCRIPT ENABLED)
	
		$(".commentOuter").show();


	// CLICK TO SHOW ALL COMMENTS (ONLY THE LAST 4 ARE SHOWN BY DEFAULT)

		$( "#showAllComments" ).click(function() {
			$( "#showAllCommentsOuter" ).fadeOut(2000);
			$( "#additionalComments" ).fadeIn(2000);
			$('html, body').animate({scrollTop: $("#commentsDisplayOuter").offset().top}, 2000);
		});


	// VALIDATE EMAIL ADDRESS
	
		function isValidEmailAddress(emailAddress) {
			var pattern = new RegExp(/^((([a-z]|\d|[!#\$%&'\*\+\-\/=\?\^_`{\|}~]|[\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF])+(\.([a-z]|\d|[!#\$%&'\*\+\-\/=\?\^_`{\|}~]|[\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF])+)*)|((\x22)((((\x20|\x09)*(\x0d\x0a))?(\x20|\x09)+)?(([\x01-\x08\x0b\x0c\x0e-\x1f\x7f]|\x21|[\x23-\x5b]|[\x5d-\x7e]|[\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF])|(\\([\x01-\x09\x0b\x0c\x0d-\x7f]|[\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF]))))*(((\x20|\x09)*(\x0d\x0a))?(\x20|\x09)+)?(\x22)))@((([a-z]|\d|[\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF])|(([a-z]|\d|[\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF])([a-z]|\d|-|\.|_|~|[\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF])*([a-z]|\d|[\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF])))\.)+(([a-z]|[\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF])|(([a-z]|[\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF])([a-z]|\d|-|\.|_|~|[\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF])*([a-z]|[\u00A0-\uD7FF\uF900-\uFDCF\uFDF0-\uFFEF])))\.?$/i);
			return pattern.test(emailAddress);
		};


	// MAX LENGTH FOR COMMENT FIELD (FUNCTION)

		function maxCommentLen() {
			var fieldValue = $('#newComment').val();
			if (fieldValue.length > 500) {
				alert("WARNING!\n\nYour comment has exceeded the character limit and has been trimmed to 500 characters.");
				var trimmedValue = fieldValue.slice(0,500)
				$('#newComment').val(trimmedValue);
				$('#newComment').trigger('autosize');
			}
		};

	

	// CALCULATE LIMIT BAR WIDTH AND COLOR (FUNCTION)
	
		function limitBar() {
			var fieldTitle = $("#newComment").attr('title');
			var fieldValue = $("#newComment").val();
			var fieldLength = fieldValue.length;
			var barPercentage = (fieldLength/5);
			if (barPercentage > 100)
				barPercentage = 100;
			if (fieldValue == fieldTitle)
				barPercentage = 0;
			$("#limitInner").css("width",barPercentage+"%");
			if (fieldLength > 500)
				$("#limitInner").css("background-color","#ff0000");	// red
			else if (fieldLength > 450)
				$("#limitInner").css("background-color","#fc9c1e");	// dark orange
			else if (fieldLength > 400)
				$("#limitInner").css("background-color","#ffb759");	// orange
			else if (fieldLength > 300)
				$("#limitInner").css("background-color","#247124");	// dark green
			else if (fieldLength > 200)
				$("#limitInner").css("background-color","#388c38");	// medium green
			else if (fieldLength > 100)
				$("#limitInner").css("background-color","#4ea44e");	// medium green
			else
				$("#limitInner").css("background-color","#68be68");	// light green
		};


	// RUN LIMIT AND MAX-LENGTH FUNCTION WITH EACH KEY-UP IN COMMENT FIELD

		$("#newComment").keyup(function(){
			$(limitBar);
			$(maxCommentLen);
		});


	// NEW COMMENT TEXT AREA FIELD GROWS AS YOU TYPE IN IT ( jquery.autosize-min.js )
	
		$('#newComment').autosize();
		
		
	// INITIALIZE COMMENT FORM FIELDS (FUNCTION)

		function initializeCommentFields() {
			$('.commentField').each(function() {
				var fieldTitle = $(this).attr('title');
			    var fieldValue = $(this).val();
			    this.value = fieldTitle;
				$(this).removeClass('green');
				$(this).removeClass('activeField');
				$(this).addClass('inactiveField');
				$("#limitInner").css("width","0px");
			})
		};
		

	// VALIDATE FORM INPUT (FUNCTION)

		function validateCommentFields() {
			$('.commentField').each(function(){
				var fieldId = $(this).attr('id');
				var fieldTitle = $(this).attr('title');
				var fieldValue = $(this).val();
				if ( (fieldValue !== fieldTitle) && (fieldValue !== '') )
					$(this).removeClass('inactiveField').addClass('activeField');
				else
					$(this).removeClass('activeField').addClass('inactiveField').val(fieldTitle);
				if ( (fieldId !== 'newComment') &&  (fieldId !== 'emailField') ) {
					if ( (fieldValue.length > 1) && (fieldValue !== fieldTitle) )
						$(this).addClass('green');
					else
						$(this).removeClass('green');
				}
				else if (fieldId == 'emailField') {
					if(isValidEmailAddress($(this).val()))
						$(this).addClass('green');
					else
						$(this).removeClass('green');
				}
			});
		};


	
	// CLICK IN MAIN COMMENT FIELD TO OPEN UP ADDITIONAL FIELDS
	
		$( "#newComment" ).click(function() {
			$('#additionalCommentFields').show();
		});


	// TEXT AND CLASS CHANGES ON COMMENT FORM FIELDS
	
		$('.commentField').each(function(){
			var fieldId = $(this).attr('id');
			var fieldTitle = $(this).attr('title');
			var fieldValue = $(this).val();
			this.value = fieldTitle;
			// Move cursor to first position on click (only when default text is in field)
			$(this).click(function() {
				var fieldTitle = $(this).attr('title');
				var fieldValue = $(this).val();
				if ( (fieldValue == fieldTitle) && (fieldValue.length > 0) ) {
					if ($(this).get(0).setSelectionRange) {
						$(this).get(0).setSelectionRange(0, 0);
					} else if ($(this).get(0).createTextRange) {
						var range = $(this).get(0).createTextRange();
						range.collapse(true);
						range.moveEnd('character', 0);
						range.moveStart('character', 0);
						range.select();
					}
				}
			});
			// Comment Field Focus
			$(this).focus(function(){
				var fieldId = $(this).attr('id');
				if (fieldId == 'newComment')
					$('#additionalCommentFields').show();
				$(validateCommentFields);
				$(limitBar);
			})
			// Comment Field Blur
			.blur(function(){
				$(validateCommentFields);
				var fieldId = $(this).attr('id');
				if (fieldId == 'newComment') {
					//$(maxCommentLen);
				}
			})
		});


	// REMAIN ANONYMOUS CHECKBOX TOGGLES NAME AND EMAIL ADDRESS FIELDS
	
		$("#anonymousCheckbox").click(function(){
			if ($("#anonymousCheckbox").is(":checked"))
				$(".additionalCommentField ").hide();
			else
				$(".additionalCommentField ").show();
		});
		

	// ENTER KEY TO SUBMIT COMMENT FORM
	
		$('.commentField').bind('keydown', function(e) {
			var fieldId = $(this).attr('id');
			var fieldTitle = $(this).attr('title');
			var fieldValue = $(this).val();
			if (fieldValue == fieldTitle)
				$(this).removeClass('inactiveField').addClass('activeField').val('');
			var code = (e.keyCode ? e.keyCode : e.which);
			// If Enter Key Was Pressed -- Submit Form
			if(code == 13 ) {
				e.preventDefault();
				$('form#commentsForm').submit();
			}
			else if( (code !== 8) && (code !== 9) && (fieldId == 'newComment') ) {
				//$(maxCommentLen);
			}
			else {
				if(fieldId == 'emailField') {
					if(isValidEmailAddress(fieldValue))
						$(this).addClass('green');
					else
						$(this).removeClass('green');
				}
			}
		});
		
		
	
	// COMMENT FORM SUBMIT (TRIGGER AJAX DB INSERT)
	
        $("form#commentsForm").submit(function() {
        	// Set variable to determine if anonymous comments are permitted
        	var allowAnonymous = 0;
			// Form field validation
	        var submitError = false;
	        var errStr = "ERROR!\n\n";
	        // Check for valid email address
	        if ( ($('#emailField').val().length>0) && ($('#emailField').attr('title') !== $('#emailField').val()) ) {
				if(!isValidEmailAddress($('#emailField').val())) {
					errStr = errStr + "The email address provide was invalid.\n\n";
					submitError = true;
				}
	        }
	        // Check for comment
	        if ( ( $('#newComment').val().length<1 ) || ( $('#newComment').attr('title') == $('#newComment').val() ) ) {
				errStr = errStr + "Please provide a comment to submit this form.\n\n";
				submitError = true;
	        }
	        // Additional checks if anonymous commenting is disabled
			if (allowAnonymous !== 1) {
				$('.commentField').each(function() {
					var fieldId = $(this).attr('id');
					var fieldTitle = $(this).attr('title');
					var fieldValue = $(this).val();
					if ( (fieldTitle == fieldValue) || (fieldValue.length < 1) ) {
			        	if (fieldId == "fNameField") {
			        		errStr = errStr + "First name is required.\n\n";
			        	}
						if (fieldId == "lNameField") {
			        		errStr = errStr + "Last name is required.\n\n";
			        	}
						if (fieldId == "emailField") {
			        		errStr = errStr + "Email address is required.\n\n";
			        	}
						submitError = true;
					}
				})
	        }
	        // Failed Validation
	        if (submitError) {
	        	//alert(errStr); // Turn on for debugging
	        // Passed validation	
	        } else {
	        // Load up form field values into variables
				var comment = $('#newComment').val();
				if ($('#fNameField').val() !== $('#fNameField').attr('title'))
					var firstName = $('#fNameField').val();  
				else
					var firstName = '';
				if ($('#lNameField').val() !== $('#lNameField').attr('title'))
					var lastName = $('#lNameField').val();
				else
					var lastName = '';
				if ($('#emailField').val() !== $('#emailField').attr('title'))
					var email = $('#emailField').val();
				else
					var email = '';
				var r = $('#rField').val();
				var pub = $('#pubField').val();
				var flowcheck = $('#flowcheckField').val();
	        	// Insert the comment into the database asynchronously
		        $.ajax({  
		            type: "POST",  
		            url: "/common/templates/global/scripts/BNLcommentsSubmit.php",  
		            data: "a="+comment+"&b="+firstName+"&c="+lastName+"&d="+email+"&e="+r+"&f="+flowcheck+"&g="+pub,  
		             success: function(html) {
						$(initializeCommentFields);
						$('#newComment').trigger('autosize');
						$('.commentField').blur();
						$('#additionalCommentFields').hide();
						$(html).hide().appendTo("#commentsDisplayOuter").fadeIn(1000);
		            }
		        });
			}
	        return false;  
        });	
});


// CLICK OUTSIDE OF COMMENT FORM CLOSES ADDITIONAL FIELDS

$(document).mouseup(function (e) {
    var container = $("#commentsShell");
    if (container.has(e.target).length === 0) {
        //$('#additionalCommentFields').hide();
		$('.commentField').removeClass('green ');
		$('.commentField').removeClass('activeField');
		$('.commentField').addClass('inactiveField');
		$("#limitInner").css("background-color","#c0c0c0");
    }
});


// CONFIRM PAGE EXIT IF FORM FIELDS ARE POPULATED


	window.onbeforeunload = confirmExit;
	function confirmExit() {
		var userInput = false;
		jQuery(function() {
			$('.commentField').each(function() {
				var fieldId = $(this).attr('id');
				var fieldTitle = $(this).attr('title');
				var fieldValue = $(this).val();
				if ( (fieldValue !== fieldTitle) && (fieldValue.length > 0) )
					userInput = true;
			});
		});
		var message = 'WARNING! You entered text in the comments box that has not been submitted.\n\n';
		message = message + 'Your comment will be lost if you leave or reload this page.\n\n';
		message = message + 'To submit your comment, be sure all required fields are completed, ';
		message = message + 'then place you cursor in any of the comment fields and press the enter key.';
		if (userInput)
			return (message);
	}
