}

input[type="reset"]::-moz-focus-inner 
{
    border: 0;
    margin: 0;
    padding: 0;
    outline: none;
}

@-moz-document url-prefix() 
{
    img:-moz-loading 
    {
        visibility: hidden;
    }
    
    img:-moz-broken 
    {
        -moz-force-broken-image-icon: 0;
    }
    
    img::-moz-loading 
    {
        visibility: hidden;
    }
    
