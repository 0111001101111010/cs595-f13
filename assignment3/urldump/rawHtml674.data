    <script language="JavaScript" type="text/javascript">

        var numberOfDropouts  = 0;
        var totalSecsTillNow = 0;
        var updatePeriodInSecs = 26;
        var dateTimeNow = new Date();
        
        //figure out the number of dropouts on the first hit to the page
        //once we have the numofDropout we can just increment the count every 26 seconds
        if(numberOfDropouts == 0)
        {
            var midNightDateTimeString = dateTimeNow.toDateString() + " 12:00 AM";
            var dateTimeMidnight = new Date(midNightDateTimeString);
            
            var dateDiff = dateTimeNow - dateTimeMidnight;
            totalSecsTillNow = Math.round(dateDiff.valueOf()/1000);
            numberOfDropouts = Math.round(totalSecsTillNow/updatePeriodInSecs);
        }
        
        UpdateNumberOfDropouts()
               
        //this function is called recursively here after every 26 seconds       
        function UpdateNumberOfDropouts()
        {
            dateTimeNow = new Date();
            var lblCountdown = document.getElementById('ctl00_lblCountdown');
            var dateTimeClosetoMidnightString = dateTimeNow.toDateString() + " 11:59:34 PM";
            var dateTimeClosetoMidnight = new Date(dateTimeClosetoMidnightString);
            
            //set the count to the Label and increase the dropouts count
            lblCountdown.innerHTML = numberOfDropouts;
            numberOfDropouts = numberOfDropouts + 1;
            
            //if we get a hit after 23:59:34 pm the dropouts count need to be reset
            if(dateTimeNow > dateTimeClosetoMidnight)
                numberOfDropouts = 0;
            
            //update the count label every 26 seconds (should set the value in millisecs
            setTimeout("UpdateNumberOfDropouts()", (updatePeriodInSecs*1000));
        }
        
    </script>
